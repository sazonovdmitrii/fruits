{% extends 'base.html.twig' %}

{% block title %}{{ category.name }} - Organic Fruits{% endblock %}

{% block body %}
<!-- body wrap start -->
<div class="body-wrap overflow-hidden">
    <!-- back-to-top start -->
    <div class="back-to-top">
        <a href="#!"><i class="fas fa-arrow-up"></i></a>
    </div>
    <!-- back-to-top end -->

    {% include 'components/header.html.twig' with {'active_menu': 'categories'} %}

    <!-- main body start -->
    <main class="main_body">
        {% include 'components/breadcrumbs.html.twig' with {
            'title': category.name,
            'category': category
        } %}

        <!-- category products section start -->
        <section class="product_section sec_ptb_100">
            <div class="container">
                <div class="row">
                    <div class="col-lg-12">
                        <div class="section_title text-center mb-5">
                            <h2 class="section_heading">{{ category.name }}</h2>
                            {% if category.description %}
                                <p class="section_desc">{{ category.description }}</p>
                            {% endif %}
                        </div>
                    </div>
                </div>
                
                {% if products|length > 0 %}
                    <div class="row">
                        {% for product in products %}
                            <div class="col-lg-3 col-md-6 col-sm-6 mb-4">
                                <div class="product_item" data-aos="fade-up" data-aos-duration="2000" data-aos-delay="{{ loop.index * 100 }}">
                                    <div class="product_thumb">
                                        <a href="{{ path('product_show', {'id': product.id}) }}">
                                            {% if product.mainImage %}
                                                <img src="{{ asset('uploads/products/' ~ product.mainImage.filename) }}" alt="{{ product.name }}" class="img-fluid">
                                            {% else %}
                                                {% if product.category.name == 'Апельсины' %}
                                                    <img src="{{ asset('assets/images/product/product2.png') }}" alt="{{ product.name }}" class="img-fluid">
                                                {% elseif product.category.name == 'Яблоки' %}
                                                    <img src="{{ asset('assets/images/product/product1.png') }}" alt="{{ product.name }}" class="img-fluid">
                                                {% elseif product.category.name == 'Бананы' %}
                                                    <img src="{{ asset('assets/images/product/product3.png') }}" alt="{{ product.name }}" class="img-fluid">
                                                {% elseif product.category.name == 'Виноград' %}
                                                    <img src="{{ asset('assets/images/product/product4.png') }}" alt="{{ product.name }}" class="img-fluid">
                                                {% elseif product.category.name == 'Груши' %}
                                                    <img src="{{ asset('assets/images/product/product5.png') }}" alt="{{ product.name }}" class="img-fluid">
                                                {% elseif product.category.name == 'Клубника' %}
                                                    <img src="{{ asset('assets/images/product/product6.png') }}" alt="{{ product.name }}" class="img-fluid">
                                                {% else %}
                                                    <img src="{{ asset('assets/images/product/product1.png') }}" alt="{{ product.name }}" class="img-fluid">
                                                {% endif %}
                                            {% endif %}
                                        </a>
                                        <div class="product_action d-flex gap-2">
                                            <a href="#!" class="btn btn-sm btn-outline-primary" data-bs-toggle="tooltip" title="В избранное">
                                                <i class="fas fa-heart"></i>
                                            </a>
                                            <button type="button"
                                                class="btn btn-sm btn-primary add-to-cart-btn"
                                                data-product-id="{{ product.id }}"
                                                data-product-name="{{ product.name }}">
                                                <i class="fas fa-shopping-cart me-1"></i>
                                                В корзину
                                            </button>
                                        </div>
                                    </div>
                                    <div class="product_content">
                                        <h4 class="product_title">
                                            <a href="{{ path('product_show', {'id': product.id}) }}">{{ product.name }}</a>
                                        </h4>
                                        {% if product.price %}
                                            <div class="product_price">
                                                <span class="price">{{ product.price }}₽</span>
                                            </div>
                                        {% endif %}
                                        {% if product.description %}
                                            <p class="product_desc">{{ product.description|slice(0, 100) }}{% if product.description|length > 100 %}...{% endif %}</p>
                                        {% endif %}
                                    </div>
                                </div>
                            </div>
                        {% endfor %}
                    </div>
                {% else %}
                    <div class="row">
                        <div class="col-lg-12">
                            <div class="text-center">
                                <h3>В этой категории пока нет товаров</h3>
                                <p>Мы работаем над пополнением ассортимента</p>
                                <a href="{{ path('categories') }}" class="btn btn-primary">Вернуться к каталогу</a>
                            </div>
                        </div>
                    </div>
                {% endif %}
            </div>
        </section>
        <!-- category products section end -->
    </main>
    <!-- main body end -->

    <!-- footer section start -->
    <footer class="footer_section position-relative">
        <div class="footer_section_wrap sec_top_space_50"
            style="background-image: url({{ asset('assets/images/footer/footer.png') }})">
            <div class="container">
                <div class="footer_top_content d-flex flex-column flex-lg-row justify-content-between align-items-center">
                    <div class="footer_top_logo">
                        <a href="{{ path('home') }}">
                            <img src="{{ asset('assets/images/logo/logo2.png') }}" alt="Organic Fruits">
                        </a>
                    </div>
                    <div class="footer_top_subs position-relative">
                        <input class="rounded-pill" type="search" name="search" placeholder="Ваш номер телефона">
                        <a href="#!">
                            <button type="button" class="btn custom_btn rounded-pill text-white position-absolute">
                                Подписаться <i class="fas fa-long-arrow-alt-right"></i>
                            </button>
                        </a>
                    </div>
                    <div class="footer_top_social">
                        <ul class="list-unstyled d-flex justify-content-end">
                            <li class="me-3"><a href="#!"><i class="fab fa-twitter"></i></a></li>
                            <li class="me-3"><a href="#!"><i class="fab fa-facebook-f"></i></a></li>
                            <li class="me-3"><a href="#!"><i class="fab fa-instagram"></i></a></li>
                            <li class="me-3"><a href="#!"><i class="fab fa-youtube"></i></a></li>
                        </ul>
                    </div>
                </div>
                <div class="footer_inner_content sec_space_xs_70">
                    <div class="footer_inner_content_wrap">
                        <div class="row">
                            <div class="col-md-6 col-lg-3">
                                <div class="footer_inner_choose_content">
                                    <div class="footer_inner_choose_title">
                                        <h4>
                                            <a href="#!" class="text-white">Почему выбирают нас</a>
                                        </h4>
                                    </div>
                                    <div class="footer_inner_choose_desc pt-2">
                                        <p>Мы предлагаем только свежие органические фрукты высшего качества, 
                                        выращенные с заботой о природе и вашем здоровье.</p>
                                    </div>
                                    <div class="footer_inner_choose">
                                        <a href="#!">
                                            <button type="button" class="btn custom_btn rounded-pill px-4 text-white">
                                                Подробнее <i class="fas fa-long-arrow-alt-right"></i>
                                            </button>
                                        </a>
                                    </div>
                                </div>
                            </div>
                            <div class="col-md-6 col-lg-3">
                                <div class="footer_inner_info_content">
                                    <div class="footer_inner_info_title">
                                        <h4>
                                            <a href="#!" class="text-white">Информация</a>
                                        </h4>
                                    </div>
                                    <div class="footer_inner_info_item pt-2">
                                        <ul class="list-unstyled">
                                            <li><a href="#!">О нас</a></li>
                                            <li><a href="#!">Информация о доставке</a></li>
