{% if field.value|length > 0 %}
    <div class="product-images-gallery">
        {% for image in field.value %}
            <div class="product-image-item" style="display: inline-block; margin: 10px; text-align: center;">
                <img src="{{ asset(image.imagePath) }}" alt="Product Image" style="max-width: 150px; max-height: 150px; border: 1px solid #ddd; padding: 5px;">
                <div style="margin-top: 5px;">
                    {% if image.isMain %}
                        <span class="badge badge-success">Главное</span>
                    {% endif %}
                    <span class="badge badge-secondary">{{ image.sortOrder }}</span>
                </div>
            </div>
        {% endfor %}
    </div>
{% else %}
    <span class="text-muted">Нет изображений</span>
{% endif %}

